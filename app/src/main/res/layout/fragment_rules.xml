<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#696862"
    tools:context=".view.fragments.RulesFragment">

    <TextView
        android:id="@+id/id_rules_tv_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Rules"
        android:textStyle="bold"
        android:textSize="60sp"
        android:fontFamily="@font/unkempt"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/id_rules_view1"
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#ffcb00"
        app:layout_constraintTop_toBottomOf="@id/id_rules_tv_title"
        app:layout_constraintWidth_percent="0.4"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id_rules_button_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="back"
        android:fontFamily="@font/unkempt"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="@drawable/background_button_records"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/id_rules_tv_title"
        app:layout_constraintBottom_toBottomOf="@id/id_rules_tv_title"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.23"/>

    <TextView
        android:id="@+id/id_rules_tv_title_game"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:fontFamily="@font/unkempt"
        app:layout_constraintTop_toBottomOf="@id/id_rules_view1"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/id_rules_tv_description"
        android:layout_width="0dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:fontFamily="@font/unkempt"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_rules_tv_title_game"/>


</androidx.constraintlayout.widget.ConstraintLayout>